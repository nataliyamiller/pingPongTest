/* JS file */

var num = prompt("Type a number");

var pingPong = function(number){
	var array1 = [];
	for (var i = 1; i <= num; i++) {
		if ((i % 3 == 0) && (i % 5 == 0)) {
			document.write(" ping-pong");
		} else if ((i % 3 == 0) || (i % 5 == 0)){
			if (i % 3 == 0){
				document.write(" ping,");
			} else {
				document.write(" pong,");
			}
		}
	 else {
		document.write(" " + i + ",");
	}
}
	}

pingPong(num);
